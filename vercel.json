{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_SUPABASE_URL": "@supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@supabase_anon_key",
    "VITE_SUPABASE_PROJECT_ID": "@supabase_project_id",
    "VITE_DEMO_MODE": "true"
  },
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  }
}
